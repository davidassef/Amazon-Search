# Test Environment Variables
# This file contains environment variables used during testing

# Node environment
NODE_ENV=test

# Test server configuration
TEST_PORT=3001
PORT=3001

# Test timeouts (in milliseconds)
TEST_TIMEOUT_UNIT=5000
TEST_TIMEOUT_INTEGRATION=15000
TEST_TIMEOUT_E2E=30000

# Axios configuration for tests
AXIOS_TIMEOUT=10000
AXIOS_MAX_RETRIES=3
AXIOS_RETRY_DELAY=2000

# Test data configuration
TEST_DATA_LOADED=false
MOCK_DATA_SEED=12345

# Logging level during tests (reduce noise)
LOG_LEVEL=error

# Test database configuration (if needed)
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_NAME=amazon_scraper_test

# Amazon scraping test configuration
TEST_SCRAPING_ENABLED=false
TEST_USE_REAL_REQUESTS=false
TEST_RATE_LIMIT_DELAY=1000

# Test coverage
COVERAGE_ENABLED=false
COVERAGE_THRESHOLD=80
